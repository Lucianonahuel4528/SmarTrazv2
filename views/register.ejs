<% layout('partials/layout') -%>
<% block('title', 'Registro'); -%><br>
    <div class="container my-4">
        <h2 class="text-center">Registrate</h2>
        <p class="text-center">Creá una cuenta como administrador de tu establecimiento 
           <br> y comenzá a disfrutar de nuestros servicios.</p>
         <div class="card">
             <div class="card-header">
                 Formulario de contacto
             </div>
            <div class="card-body">
                <form action="/administrador/register" method="POST">
                    <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="nombres">Nombre/s</label>
                        <input type="text" class="form-control" id="nombres" name="nombres" placeholder="Nombre/s">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico">
                    </div>
                    
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="apellidos">Apellido/s</label>
                        <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellido/s">
                    </div>
                    <div class="form-group">
                        <label for="dni">DNI</label>
                        <input type="number" class="form-control" id="dni" name="dni" placeholder="DNI">
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono</label>
                        <input type="tel" class="form-control" id="telefono" name="telefono" placeholder="teléfono">
                    </div>
                </div>
            </div>
                    </br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Registrarme</button>
                    </div>
                </form>
             </div>
        </div>
    </div>
